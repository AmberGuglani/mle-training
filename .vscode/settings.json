{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "python.formatting.provider": "black",
    "python.sortImports.path": "isort",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=88",  // Adjust this to your preferred line length
        "--extend-ignore=E203",  // Ignore black compatibility
        "--ignore=W503",        // Ignore line break before binary operator
        "--exclude=.git,__pycache__,.venv,.vscode"
    ],
    "python.pythonPath": "C:/Program Files/Python310/python.exe"
}